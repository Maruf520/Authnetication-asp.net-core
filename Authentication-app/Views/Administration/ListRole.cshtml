@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}



<h1>ALl Roles</h1>
@if (Model.Any())
{<a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole" asp-controller="Administration">Add New Role</a>
    @foreach (var role in Model)
    {
        
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
            </div>
            <div class="card-footer">
                <a  class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>

            </div>
        </div>
    }

}
else
{


    <div class="card">
        <div class="card-header">
            No Roles Yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the buton below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="CreateRole">Create Role</a>
        </div>
    </div>
}
